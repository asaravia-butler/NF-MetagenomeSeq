FROM mambaorg/micromamba:2.0-ubuntu22.04

LABEL AUTHOR="Olabiyi Obayomi"
LABEL EMAIL="obadbotanist@yahoo.com"

COPY --chown=$MAMBA_USER:$MAMBA_USER pavian.yaml /tmp/pavian.yaml
RUN micromamba create -y -f /tmp/pavian.yaml && \
    micromamba clean --all --yes

RUN echo "eval $(micromamba shell hook --shell bash) && micromamba activate && micromamba activate /opt/conda/envs/pavian/" > ~/.bashrc

ENV PATH="/opt/conda/envs/pavian/bin/:/opt/conda/bin:$PATH"

CMD ["/bin/bash"]
